<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="quick_option_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/dialog_animation</item>
    </style>
    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/create_newspaper_dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/create_newspaper_dialog_exit</item>
    </style>
</resources>
